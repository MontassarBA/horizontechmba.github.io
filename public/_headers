# Security Headers for GitHub Pages / Netlify
# Prevent clickjacking attacks
X-Frame-Options: DENY

# Prevent MIME sniffing
X-Content-Type-Options: nosniff

# Legacy XSS protection
X-XSS-Protection: 1; mode=block

# Control referrer information
Referrer-Policy: strict-origin-when-cross-origin

# Permissions Policy (formerly Feature Policy)
Permissions-Policy: geolocation=(), microphone=(), camera=(), payment=(), usb=()

# Strict HTTPS
Strict-Transport-Security: max-age=63072000; includeSubDomains; preload

# Content Security Policy - Strict (Updated for Formspree + GTM + AI Advisor)
Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline' https://www.googletagmanager.com https://www.gstatic.com https://www.gstatic.com/recaptcha/ https://www.google.com/recaptcha/ https://formspree.io; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https:; connect-src 'self' https://formspree.io https://www.google-analytics.com https://www.googletagmanager.com https://horizontech-ai.montassar-benabdallah.workers.dev; frame-src https://formspree.io https://www.google.com/recaptcha/ https://recaptcha.google.com/recaptcha/; object-src 'none'; base-uri 'self'; form-action 'self' https://formspree.io

# Block all insecure requests
Upgrade-Insecure-Requests: 1

# Additional OWASP recommendations
Cross-Origin-Embedder-Policy: require-corp
Cross-Origin-Opener-Policy: same-origin
Cross-Origin-Resource-Policy: same-origin
