---
import { getLangFromUrl } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);

const content = {
  fr: {
    badge: 'Prendre Rendez-vous',
    title: 'Planifiez une consultation gratuite',
    subtitle: 'Discutons de votre projet et d√©couvrez comment nous pouvons vous aider √† atteindre vos objectifs.',
    duration: '30 min',
    durationLabel: 'Consultation gratuite',
    benefits: [
      'Analyse de vos besoins techniques',
      'Recommandations personnalis√©es',
      'Estimation pr√©liminaire',
      'Sans engagement'
    ],
    cta: 'R√©server un cr√©neau',
    alternative: 'Ou contactez-nous directement',
    email: 'contact@horizontechmba.com',
    phone: '+1 (581) 578-3505'
  },
  en: {
    badge: 'Book a Meeting',
    title: 'Schedule a free consultation',
    subtitle: 'Let\'s discuss your project and discover how we can help you achieve your goals.',
    duration: '30 min',
    durationLabel: 'Free consultation',
    benefits: [
      'Technical needs analysis',
      'Personalized recommendations',
      'Preliminary estimate',
      'No commitment'
    ],
    cta: 'Book a slot',
    alternative: 'Or contact us directly',
    email: 'contact@horizontechmba.com',
    phone: '+1 (581) 578-3505'
  }
};

const t = content[lang] || content.en;

// Replace with your actual Calendly URL
const calendlyUrl = 'https://calendly.com/horizontechmba';
---

<section id="booking" class="py-24 bg-gradient-to-b from-gray-50/50 to-white">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="max-w-6xl mx-auto">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <!-- Left: Info -->
        <div>
          <span class="inline-block px-4 py-2 bg-primary-100 text-primary-700 rounded-full text-sm font-semibold mb-6">
            üìÖ {t.badge}
          </span>
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6">
            {t.title}
          </h2>
          <p class="text-xl text-gray-600 mb-8">
            {t.subtitle}
          </p>
          
          <!-- Duration badge -->
          <div class="inline-flex items-center gap-3 px-4 py-3 bg-white/80 backdrop-blur-sm rounded-xl shadow-lg shadow-black/5 border border-gray-100 mb-8">
            <div class="w-12 h-12 bg-primary-100 rounded-xl flex items-center justify-center">
              <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <div>
              <p class="font-bold text-gray-900">{t.duration}</p>
              <p class="text-sm text-gray-500">{t.durationLabel}</p>
            </div>
          </div>
          
          <!-- Benefits -->
          <ul class="space-y-4 mb-8">
            {t.benefits.map((benefit) => (
              <li class="flex items-center gap-3">
                <span class="flex-shrink-0 w-6 h-6 bg-green-100 rounded-full flex items-center justify-center">
                  <svg class="w-4 h-4 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                  </svg>
                </span>
                <span class="text-gray-700">{benefit}</span>
              </li>
            ))}
          </ul>
          
          <!-- Alternative contact -->
          <div class="pt-8 border-t border-gray-200">
            <p class="text-sm text-gray-500 mb-4">{t.alternative}</p>
            <div class="flex flex-wrap gap-4">
              <a 
                href={`mailto:${t.email}`}
                class="inline-flex items-center gap-2 text-primary-600 hover:text-primary-700 font-medium"
              >
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
                {t.email}
              </a>
              <a 
                href={`tel:${t.phone.replace(/[^+\d]/g, '')}`}
                class="inline-flex items-center gap-2 text-primary-600 hover:text-primary-700 font-medium"
              >
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                </svg>
                {t.phone}
              </a>
            </div>
          </div>
        </div>
        
        <!-- Right: Calendly Widget -->
        <div class="bg-white/70 backdrop-blur-lg rounded-3xl shadow-2xl shadow-black/10 border border-white/50 overflow-hidden">
          <div class="p-6 bg-primary-500 text-white text-center">
            <h3 class="font-bold text-lg">{t.cta}</h3>
          </div>
          
          <!-- Calendly inline widget -->
          <div 
            id="calendly-widget"
            class="calendly-inline-widget" 
            data-url={`${calendlyUrl}?hide_gdpr_banner=1&primary_color=009999`}
            style="min-width:320px;height:600px;"
          >
            <!-- Fallback content while loading -->
            <div class="flex items-center justify-center h-full p-8">
              <div class="text-center">
                <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4 animate-pulse">
                  <svg class="w-8 h-8 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                  </svg>
                </div>
                <p class="text-gray-500 mb-4">
                  {lang === 'fr' ? 'Chargement du calendrier...' : 'Loading calendar...'}
                </p>
                <a 
                  href={calendlyUrl}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-flex items-center gap-2 px-6 py-3 bg-primary-500 hover:bg-primary-600 text-white font-semibold rounded-xl transition-colors"
                >
                  {t.cta}
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                  </svg>
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Calendly script -->
<script is:inline>
  // Load Calendly widget script
  (function() {
    const script = document.createElement('script');
    script.src = 'https://assets.calendly.com/assets/external/widget.js';
    script.async = true;
    document.head.appendChild(script);
  })();
</script>
