---
import { getLangFromUrl, useTranslations, useTranslatedPath } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const translatePath = useTranslatedPath(lang);
const currentYear = new Date().getFullYear();
---

<footer class="bg-dark-900 text-white">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <!-- Brand -->
      <div class="col-span-1 md:col-span-2">
        <a href={translatePath('/')} class="flex items-center mb-4">
          <img 
            src="/logo_mono_tr.png" 
            alt="HORIZONTECH MBA" 
            class="h-12 sm:h-14 w-auto object-contain" 
          />
        </a>
        </a>
        <p class="text-gray-400 max-w-md">
          {t('footer.description')}
        </p>
        <!-- Social Links -->
        <div class="flex space-x-4 mt-6">
          <a href="#" class="text-gray-400 hover:text-primary-400 transition-colors" aria-label="LinkedIn">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
          </a>
          <a href="#" class="text-gray-400 hover:text-primary-400 transition-colors" aria-label="X (Twitter)">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
            </svg>
          </a>
        </div>
      </div>
      
      <!-- Quick Links -->
      <div>
        <h4 class="text-lg font-semibold mb-4">{t('footer.quicklinks')}</h4>
        <ul class="space-y-2">
          <li>
            <a href={translatePath('/')} class="text-gray-400 hover:text-primary-400 transition-colors">
              {t('nav.home')}
            </a>
          </li>
          <li>
            <a href={translatePath('/services')} class="text-gray-400 hover:text-primary-400 transition-colors">
              {t('nav.services')}
            </a>
          </li>
          <li>
            <a href={translatePath('/about')} class="text-gray-400 hover:text-primary-400 transition-colors">
              {t('nav.about')}
            </a>
          </li>
        </ul>
      </div>
      
      <!-- Contact -->
      <div>
        <h4 class="text-lg font-semibold mb-4">{t('footer.contact')}</h4>
        <ul class="space-y-3 text-gray-400">
          <li class="flex items-start space-x-2">
            <svg class="w-5 h-5 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            <a href="https://maps.google.com/?q=7139+Rue+Henri-Julien,+Levis,+QC+G6Y+9X5,+Canada" target="_blank" rel="noopener noreferrer" class="hover:text-primary-400 transition-colors">
              7139 Rue Henri-Julien<br/>Lévis, QC G6Y 9X5<br/>Canada
            </a>
          </li>
          <li class="flex items-center space-x-2">
            <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
            <span>contact@horizontechmba.com</span>
          </li>
        </ul>
      </div>
    </div>
    
    <!-- Copyright -->
    <div class="border-t border-gray-800 mt-12 pt-8">
      <div class="flex flex-col md:flex-row justify-between items-center gap-4">
        <p class="text-gray-500">&copy; {currentYear} HORIZONTECH MBA inc. {t('footer.rights')}</p>
        <div class="flex items-center gap-4 text-sm">
          <a href={translatePath('/cookies/')} class="text-gray-500 hover:text-white transition-colors">
            {lang === 'fr' ? 'Politique de cookies' : 'Cookie Policy'}
          </a>
          <button 
            onclick="window.openCookiePreferences && window.openCookiePreferences()"
            class="text-gray-500 hover:text-white transition-colors"
          >
            {lang === 'fr' ? 'Gérer les cookies' : 'Manage Cookies'}
          </button>
        </div>
      </div>
    </div>
  </div>
</footer>
