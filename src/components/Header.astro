---
import { getLangFromUrl, useTranslations, useTranslatedPath, languages } from '../i18n/utils';
import LanguagePicker from './LanguagePicker.astro';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const translatePath = useTranslatedPath(lang);
---

<header class="fixed w-full top-0 z-50 bg-white/95 backdrop-blur-sm shadow-sm">
  <nav class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16 sm:h-18 md:h-20">
      <!-- Logo -->
      <a href={translatePath('/')} class="flex items-center flex-shrink-0">
        <img 
          src="/logo.png" 
          alt="HORIZONTECH MBA" 
          class="h-12 sm:h-14 md:h-16 w-auto object-contain" 
        />
      </a>
      </a>
      
      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center space-x-8">
        <a href={translatePath('/')} class="text-secondary-900 hover:text-primary-500 transition-colors font-medium">
          {t('nav.home')}
        </a>
        <a href={translatePath('/services')} class="text-secondary-900 hover:text-primary-500 transition-colors font-medium">
          {t('nav.services')}
        </a>
        <a href={translatePath('/about')} class="text-secondary-900 hover:text-primary-500 transition-colors font-medium">
          {t('nav.about')}
        </a>
        <a href={translatePath('/contact')} class="text-secondary-900 hover:text-primary-500 transition-colors font-medium">
          {t('nav.contact')}
        </a>
        <LanguagePicker />
      </div>
      
      <!-- Mobile menu button -->
      <button id="mobile-menu-btn" class="md:hidden p-2 rounded-lg hover:bg-gray-100">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>
    
    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="hidden md:hidden pb-4">
      <div class="flex flex-col space-y-4">
        <a href={translatePath('/')} class="text-gray-700 hover:text-primary-600 transition-colors font-medium py-2">
          {t('nav.home')}
        </a>
        <a href={translatePath('/services')} class="text-gray-700 hover:text-primary-600 transition-colors font-medium py-2">
          {t('nav.services')}
        </a>
        <a href={translatePath('/about')} class="text-gray-700 hover:text-primary-600 transition-colors font-medium py-2">
          {t('nav.about')}
        </a>
        <a href={translatePath('/contact')} class="text-gray-700 hover:text-primary-600 transition-colors font-medium py-2">
          {t('nav.contact')}
        </a>
        <div class="pt-2 border-t">
          <LanguagePicker />
        </div>
      </div>
    </div>
  </nav>
</header>

<script>
  const mobileMenuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  
  mobileMenuBtn?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>
