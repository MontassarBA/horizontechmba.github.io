---
import { getLangFromUrl, useTranslations, useTranslatedPath } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const translatePath = useTranslatedPath(lang);

const services = [
  {
    icon: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path></svg>`,
    titleKey: 'services.consulting.title',
    descKey: 'services.consulting.description',
    color: 'primary'
  },
  {
    icon: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z"></path></svg>`,
    titleKey: 'services.embedded.title',
    descKey: 'services.embedded.description',
    color: 'secondary'
  },
  {
    icon: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path></svg>`,
    titleKey: 'services.ai.title',
    descKey: 'services.ai.description',
    color: 'primary'
  },
  {
    icon: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path></svg>`,
    titleKey: 'services.energy.title',
    descKey: 'services.energy.description',
    color: 'secondary'
  }
];
---

<section class="py-20 bg-gray-50">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900">
        {t('services.title')}
      </h2>
      <p class="mt-4 text-xl text-gray-600 max-w-2xl mx-auto">
        {t('services.subtitle')}
      </p>
    </div>
    
    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
      {services.map((service, index) => (
        <div 
          class="group bg-white rounded-2xl p-8 shadow-sm hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2 border border-gray-100"
          style={`animation-delay: ${index * 100}ms`}
        >
          <div class={`w-16 h-16 rounded-xl flex items-center justify-center mb-6 ${
            service.color === 'primary' 
              ? 'bg-primary-100 text-primary-600 group-hover:bg-primary-600 group-hover:text-white' 
              : 'bg-secondary-100 text-secondary-600 group-hover:bg-secondary-600 group-hover:text-white'
          } transition-colors duration-300`}>
            <Fragment set:html={service.icon} />
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-3">
            {t(service.titleKey)}
          </h3>
          <p class="text-gray-600 leading-relaxed">
            {t(service.descKey)}
          </p>
        </div>
      ))}
    </div>
    
    <div class="text-center mt-12">
      <a 
        href={translatePath('/services')} 
        class="inline-flex items-center px-6 py-3 text-primary-600 font-semibold hover:text-primary-700 transition-colors"
      >
        {lang === 'fr' ? 'Voir tous nos services' : 'View all services'}
        <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
        </svg>
      </a>
    </div>
  </div>
</section>
