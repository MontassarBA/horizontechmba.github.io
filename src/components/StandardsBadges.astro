---
import { getLangFromUrl, useTranslatedPath } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const translatePath = useTranslatedPath(lang);

const standards = [
  { code: 'IEC 60601', color: 'red' },
  { code: 'IEC 62304', color: 'red' },
  { code: 'IEC 61508', color: 'blue' },
  { code: 'ISO 13849', color: 'blue' },
  { code: 'ISO 26262', color: 'blue' },
  { code: 'DLMS/COSEM', color: 'green' },
  { code: 'EMI/EMC', color: 'purple' }
];

const colorClasses = {
  red: 'bg-red-50 text-red-700 border-red-200',
  blue: 'bg-blue-50 text-blue-700 border-blue-200',
  green: 'bg-green-50 text-green-700 border-green-200',
  purple: 'bg-purple-50 text-purple-700 border-purple-200'
};
---

<section class="py-12 bg-gray-50/50">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-8">
      <div class="inline-flex items-center gap-2 text-sm text-gray-600 mb-2">
        <svg class="w-4 h-4 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
        </svg>
        <span class="font-medium">{lang === 'fr' ? 'Certifications & Conformité' : 'Certifications & Compliance'}</span>
      </div>
      <h2 class="text-lg md:text-xl font-bold text-gray-900">
        {lang === 'fr' ? 'Normes Maîtrisées' : 'Standards Mastered'}
      </h2>
    </div>
    
    <div class="flex flex-wrap justify-center gap-3 max-w-4xl mx-auto">
      {standards.map((standard) => (
        <div class={`px-4 py-2 rounded-lg border font-semibold text-sm shadow-sm ${colorClasses[standard.color]}`}>
          {standard.code}
        </div>
      ))}
    </div>
    
    <div class="text-center mt-6">
      <a 
        href={translatePath('/standards')}
        class="inline-flex items-center gap-2 text-primary-600 hover:text-primary-700 font-medium text-sm transition-colors"
      >
        {lang === 'fr' ? 'En savoir plus sur nos certifications' : 'Learn more about our certifications'}
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
      </a>
    </div>
  </div>
</section>
