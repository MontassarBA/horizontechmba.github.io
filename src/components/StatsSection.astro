---
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section class="py-16 sm:py-20 bg-gradient-to-b from-gray-50 to-white">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-2 lg:grid-cols-4 gap-6 sm:gap-8 lg:gap-12">
      <!-- Projects -->
      <div class="text-center group">
        <div class="relative inline-block">
          <div class="absolute inset-0 bg-primary-500/20 rounded-full blur-xl group-hover:blur-2xl transition-all duration-300"></div>
          <div class="relative text-4xl sm:text-5xl md:text-6xl font-black text-primary-600">
            30<span class="text-primary-400">+</span>
          </div>
        </div>
        <p class="mt-3 sm:mt-4 text-sm sm:text-base text-gray-700 font-medium">{t('stats.projects')}</p>
      </div>
      
      <!-- Clients -->
      <div class="text-center group">
        <div class="relative inline-block">
          <div class="absolute inset-0 bg-primary-500/20 rounded-full blur-xl group-hover:blur-2xl transition-all duration-300"></div>
          <div class="relative text-4xl sm:text-5xl md:text-6xl font-black text-primary-600">
            20<span class="text-primary-400">+</span>
          </div>
        </div>
        <p class="mt-3 sm:mt-4 text-sm sm:text-base text-gray-700 font-medium">{t('stats.clients')}</p>
      </div>
      
      <!-- Experience -->
      <div class="text-center group">
        <div class="relative inline-block">
          <div class="absolute inset-0 bg-primary-500/20 rounded-full blur-xl group-hover:blur-2xl transition-all duration-300"></div>
          <div class="relative text-4xl sm:text-5xl md:text-6xl font-black text-primary-600">
            15<span class="text-primary-400">+</span>
          </div>
        </div>
        <p class="mt-3 sm:mt-4 text-sm sm:text-base text-gray-700 font-medium">{t('stats.experience')}</p>
      </div>
      
      <!-- Team -->
      <div class="text-center group">
        <div class="relative inline-block">
          <div class="absolute inset-0 bg-primary-500/20 rounded-full blur-xl group-hover:blur-2xl transition-all duration-300"></div>
          <div class="relative text-4xl sm:text-5xl md:text-6xl font-black text-primary-600">
            10<span class="text-primary-400">+</span>
          </div>
        </div>
        <p class="mt-3 sm:mt-4 text-sm sm:text-base text-gray-700 font-medium">{t('stats.expertise')}</p>
      </div>
    </div>
  </div>
</section>
