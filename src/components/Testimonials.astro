---
import { getLangFromUrl, useTranslations, useTranslatedPath } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const translatePath = useTranslatedPath(lang);

const content = {
  fr: {
    badge: 'Notre Engagement',
    title: 'Pourquoi choisir HORIZONTECH MBA?',
    subtitle: '15+ ans d\'expertise en ingénierie au service de votre réussite',
    experience: {
      number: '15+',
      label: 'Années d\'expérience',
      description: 'Notre fondateur cumule plus de 15 ans d\'expertise en ingénierie logicielle embarquée, IoT et IA auprès d\'entreprises de renom dans l\'aérospatiale, le médical et l\'énergie.'
    },
    values: [
      {
        icon: 'shield',
        title: 'Expertise Éprouvée',
        description: 'Une expérience solide acquise auprès de leaders de l\'industrie avant de fonder HORIZONTECH MBA.'
      },
      {
        icon: 'handshake',
        title: 'Partenariat Dédié',
        description: 'Une approche personnalisée où chaque client bénéficie d\'une attention directe du fondateur.'
      },
      {
        icon: 'rocket',
        title: 'Innovation Continue',
        description: 'Les dernières technologies et méthodologies au service de vos projets critiques.'
      }
    ],
    cta: 'Discuter de votre projet'
  },
  en: {
    badge: 'Our Commitment',
    title: 'Why choose HORIZONTECH MBA?',
    subtitle: '15+ years of engineering expertise at your service',
    experience: {
      number: '15+',
      label: 'Years of experience',
      description: 'Our founder has accumulated over 15 years of expertise in embedded software engineering, IoT and AI with renowned companies in aerospace, medical and energy sectors.'
    },
    values: [
      {
        icon: 'shield',
        title: 'Proven Expertise',
        description: 'Solid experience gained with industry leaders before founding HORIZONTECH MBA.'
      },
      {
        icon: 'handshake',
        title: 'Dedicated Partnership',
        description: 'A personalized approach where each client receives direct attention from the founder.'
      },
      {
        icon: 'rocket',
        title: 'Continuous Innovation',
        description: 'The latest technologies and methodologies serving your critical projects.'
      }
    ],
    cta: 'Discuss your project'
  }
};

const c = content[lang] || content.en;

const icons = {
  shield: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>`,
  handshake: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>`,
  rocket: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"/>`
};
---

<section class="py-24 bg-gradient-to-b from-gray-50/50 to-white relative overflow-hidden">
  <!-- Background decoration -->
  <div class="absolute top-0 left-0 w-72 h-72 bg-primary-100/50 rounded-full blur-3xl -translate-x-1/2 -translate-y-1/2"></div>
  <div class="absolute bottom-0 right-0 w-96 h-96 bg-primary-100/30 rounded-full blur-3xl translate-x-1/2 translate-y-1/2"></div>
  
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <!-- Header -->
    <div class="text-center mb-16">
      <span class="inline-block px-4 py-2 bg-primary-100 text-primary-700 rounded-full text-sm font-semibold mb-4">
        {c.badge}
      </span>
      <h2 class="text-3xl md:text-5xl font-bold text-gray-900 mb-6">
        {c.title}
      </h2>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        {c.subtitle}
      </p>
    </div>
    
    <!-- Experience Highlight -->
    <div class="max-w-4xl mx-auto mb-16">
      <div class="bg-white/70 backdrop-blur-lg rounded-3xl p-8 md:p-12 shadow-xl shadow-black/5 border border-white/50">
        <div class="flex flex-col md:flex-row items-center gap-8">
          <div class="flex-shrink-0">
            <div class="w-32 h-32 bg-gradient-to-br from-primary-400 to-primary-600 rounded-2xl flex items-center justify-center shadow-lg shadow-primary-500/30">
              <span class="text-5xl font-bold text-white">{c.experience.number}</span>
            </div>
            <p class="text-center mt-3 font-semibold text-gray-700">{c.experience.label}</p>
          </div>
          <div class="flex-1 text-center md:text-left">
            <p class="text-lg text-gray-700 leading-relaxed">
              {c.experience.description}
            </p>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Values Grid -->
    <div class="grid md:grid-cols-3 gap-8 max-w-5xl mx-auto mb-12">
      {c.values.map((value, index) => (
        <div 
          class="bg-white/70 backdrop-blur-lg rounded-2xl p-8 shadow-lg shadow-black/5 border border-white/50 hover:shadow-xl transition-all duration-300 group text-center"
        >
          <div class="w-16 h-16 bg-primary-100 rounded-2xl flex items-center justify-center mb-6 mx-auto group-hover:bg-primary-500 transition-colors">
            <svg class="w-8 h-8 text-primary-600 group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24" set:html={icons[value.icon]} />
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-3">{value.title}</h3>
          <p class="text-gray-600 leading-relaxed">{value.description}</p>
        </div>
      ))}
    </div>
    
    <!-- CTA -->
    <div class="text-center">
      <a 
        href={translatePath('/contact')}
        class="inline-flex items-center gap-2 px-8 py-4 bg-primary-500 hover:bg-primary-600 text-white font-semibold rounded-xl shadow-lg shadow-primary-500/25 hover:shadow-xl transition-all duration-300 group"
      >
        {c.cta}
        <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
        </svg>
      </a>
    </div>
  </div>
</section>
