---
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section id="content" class="py-12 bg-gray-50 border-y border-gray-100">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <p class="text-center text-sm font-medium text-gray-500 uppercase tracking-wider mb-8">
      {t('hero.trusted')}
    </p>
    
    <!-- Trust badges / Industry sectors -->
    <div class="flex flex-wrap justify-center items-center gap-8 md:gap-16">
      <!-- Aerospace -->
      <div class="flex flex-col items-center text-gray-400 hover:text-primary-500 transition-colors">
        <svg class="w-10 h-10 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path>
        </svg>
        <span class="text-xs font-medium">Aerospace</span>
      </div>
      
      <!-- Healthcare -->
      <div class="flex flex-col items-center text-gray-400 hover:text-primary-500 transition-colors">
        <svg class="w-10 h-10 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
        </svg>
        <span class="text-xs font-medium">Healthcare</span>
      </div>
      
      <!-- Energy -->
      <div class="flex flex-col items-center text-gray-400 hover:text-primary-500 transition-colors">
        <svg class="w-10 h-10 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
        </svg>
        <span class="text-xs font-medium">Energy</span>
      </div>
      
      <!-- Industrial -->
      <div class="flex flex-col items-center text-gray-400 hover:text-primary-500 transition-colors">
        <svg class="w-10 h-10 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"></path>
        </svg>
        <span class="text-xs font-medium">Industrial</span>
      </div>
      
      <!-- Telecommunications -->
      <div class="flex flex-col items-center text-gray-400 hover:text-primary-500 transition-colors">
        <svg class="w-10 h-10 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8.111 16.404a5.5 5.5 0 017.778 0M12 20h.01m-7.08-7.071c3.904-3.905 10.236-3.905 14.141 0M1.394 9.393c5.857-5.857 15.355-5.857 21.213 0"></path>
        </svg>
        <span class="text-xs font-medium">Telecom</span>
      </div>
    </div>
  </div>
</section>
