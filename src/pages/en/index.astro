---
import Layout from '../../layouts/Layout.astro';
import { getLangFromUrl, useTranslations } from '../../i18n/utils';
import HeroSection from '../../components/HeroSection.astro';
import TrustBadges from '../../components/TrustBadges.astro';
import ValueProps from '../../components/ValueProps.astro';
import ServicesPreview from '../../components/ServicesPreview.astro';
import StatsSection from '../../components/StatsSection.astro';
import Testimonials from '../../components/Testimonials.astro';
import CTASection from '../../components/CTASection.astro';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout 
  title={t('nav.home')}
  description="Embedded systems and electronics consulting for medical devices, smart metering, and off-highway equipment. IEC 60601/62304, IEC 61508, ISO 13849, DLMS/COSEM. Based in Lévis, Quebec, Canada."
  keywords="embedded systems consulting, electronics design, PCB design, medical devices IEC 60601 IEC 62304, smart metering DLMS COSEM, functional safety IEC 61508 ISO 13849, EMI EMC, HIL SIL, industrial automation, Lévis Quebec"
>
  <HeroSection />
  <TrustBadges />
  <ValueProps />
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-5xl mx-auto">
        <h2 class="text-2xl md:text-3xl font-bold text-gray-900 mb-4">
          Embedded systems, electronics design, and compliance engineering
        </h2>
        <p class="text-gray-600 mb-6">
          We build reliable embedded electronics and firmware for medical devices, smart energy metering,
          and off-highway equipment. Our work aligns with IEC 60601/62304, IEC 61508, ISO 13849, ISO 26262,
          and DLMS/COSEM.
        </p>
        <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-3 text-sm text-gray-700">
          <div class="px-4 py-3 rounded-lg bg-gray-50 border border-gray-100">Embedded systems</div>
          <div class="px-4 py-3 rounded-lg bg-gray-50 border border-gray-100">Electronics & PCB design</div>
          <div class="px-4 py-3 rounded-lg bg-gray-50 border border-gray-100">IEC 60601 / 62304</div>
          <div class="px-4 py-3 rounded-lg bg-gray-50 border border-gray-100">IEC 61508</div>
          <div class="px-4 py-3 rounded-lg bg-gray-50 border border-gray-100">ISO 13849</div>
          <div class="px-4 py-3 rounded-lg bg-gray-50 border border-gray-100">ISO 26262</div>
          <div class="px-4 py-3 rounded-lg bg-gray-50 border border-gray-100">DLMS/COSEM</div>
          <div class="px-4 py-3 rounded-lg bg-gray-50 border border-gray-100">EMI / EMC</div>
          <div class="px-4 py-3 rounded-lg bg-gray-50 border border-gray-100">HIL / SIL</div>
          <div class="px-4 py-3 rounded-lg bg-gray-50 border border-gray-100">Automation & vision</div>
          <div class="px-4 py-3 rounded-lg bg-gray-50 border border-gray-100">Automotive</div>
        </div>
      </div>
    </div>
  </section>
  <StatsSection />
  <ServicesPreview />
  <Testimonials />
  <CTASection />
</Layout>
