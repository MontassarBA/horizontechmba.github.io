---
import Layout from '../../layouts/Layout.astro';
import { getLangFromUrl, useTranslations } from '../../i18n/utils';
import HeroSection from '../../components/HeroSection.astro';
import TrustBadges from '../../components/TrustBadges.astro';
import ValueProps from '../../components/ValueProps.astro';
import ServicesPreview from '../../components/ServicesPreview.astro';
import StatsSection from '../../components/StatsSection.astro';
import Testimonials from '../../components/Testimonials.astro';
import CTASection from '../../components/CTASection.astro';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout 
  title={t('nav.home')}
  description="HORIZONTECH MBA inc. - Expert engineering consulting in embedded systems, IoT, AI, software development and energy solutions. Serving aerospace, healthcare, energy and industrial sectors in Quebec, Canada. Embedded systems consultant, EMI/EMC consulting, HIL/SIL Matlab, quality, risk analysis, and development project management for Canada and US clients."
  keywords="engineering consulting Lévis Quebec, embedded systems development Canada, IoT solutions, AI consulting, software engineering, aerospace consulting, healthcare technology, energy solutions Quebec, embedded systems consultant Lévis, EMI EMC consultant Quebec, HIL SIL Matlab Canada, development project management, risk analysis, engineering quality"
>
  <HeroSection />
  <TrustBadges />
  <ValueProps />
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-5xl mx-auto">
        <h2 class="text-2xl md:text-3xl font-bold text-gray-900 mb-4">
          Embedded systems consultant, EMI/EMC, HIL/SIL, Matlab
        </h2>
        <p class="text-gray-600 mb-6">
          We support critical embedded systems, EMI/EMC, HIL/SIL testing, Matlab/Simulink,
          quality engineering, risk analysis, and development project management. Based in Lévis (Quebec),
          we serve clients across Canada and the United States.
        </p>
        <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-3 text-sm text-gray-700">
          <div class="px-4 py-3 rounded-lg bg-gray-50 border border-gray-100">Embedded systems</div>
          <div class="px-4 py-3 rounded-lg bg-gray-50 border border-gray-100">EMI / EMC</div>
          <div class="px-4 py-3 rounded-lg bg-gray-50 border border-gray-100">HIL / SIL</div>
          <div class="px-4 py-3 rounded-lg bg-gray-50 border border-gray-100">Matlab / Simulink</div>
          <div class="px-4 py-3 rounded-lg bg-gray-50 border border-gray-100">Quality & compliance</div>
          <div class="px-4 py-3 rounded-lg bg-gray-50 border border-gray-100">Risk analysis</div>
          <div class="px-4 py-3 rounded-lg bg-gray-50 border border-gray-100">Project management</div>
          <div class="px-4 py-3 rounded-lg bg-gray-50 border border-gray-100">IoT & AI</div>
          <div class="px-4 py-3 rounded-lg bg-gray-50 border border-gray-100">Software development</div>
        </div>
      </div>
    </div>
  </section>
  <StatsSection />
  <ServicesPreview />
  <Testimonials />
  <CTASection />
</Layout>
