---
import Layout from '../../layouts/Layout.astro';
import { getLangFromUrl, useTranslations } from '../../i18n/utils';
import HeroSection from '../../components/HeroSection.astro';
import TrustBadges from '../../components/TrustBadges.astro';
import ValueProps from '../../components/ValueProps.astro';
import ServicesPreview from '../../components/ServicesPreview.astro';
import StatsSection from '../../components/StatsSection.astro';
import Testimonials from '../../components/Testimonials.astro';
import CTASection from '../../components/CTASection.astro';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout 
  title={t('nav.home')}
  description="HORIZONTECH MBA inc. - Consultant en systèmes embarqués, EMI/EMC, HIL/SIL Matlab, qualité, analyse de risques et gestion de projets de développement. Services en IoT, IA et logiciel. Lévis, Québec, Canada, US."
  keywords="consultant systèmes embarqués Lévis, consultant EMI EMC Québec, HIL SIL Matlab Canada, gestion de projet développement, analyse de risques, qualité ingénierie, consultation ingénierie Lévis Québec, solutions IoT, intelligence artificielle, développement logiciel, aérospatiale, technologie santé, solutions énergie Québec"
>
  <HeroSection />
  <TrustBadges />
  <ValueProps />
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-5xl mx-auto">
        <h2 class="text-2xl md:text-3xl font-bold text-gray-900 mb-4">
          Consultant en systèmes embarqués, EMI/EMC, HIL/SIL, Matlab
        </h2>
        <p class="text-gray-600 mb-6">
          Nous intervenons sur les systèmes embarqués critiques, l'EMI/EMC, les tests HIL/SIL, Matlab/Simulink,
          la qualité, l'analyse de risques et la gestion de projets de développement. Basés à Lévis (Québec),
          nous servons des clients au Canada et aux États-Unis.
        </p>
        <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-3 text-sm text-gray-700">
          <div class="px-4 py-3 rounded-lg bg-gray-50 border border-gray-100">Systèmes embarqués</div>
          <div class="px-4 py-3 rounded-lg bg-gray-50 border border-gray-100">EMI / EMC</div>
          <div class="px-4 py-3 rounded-lg bg-gray-50 border border-gray-100">HIL / SIL</div>
          <div class="px-4 py-3 rounded-lg bg-gray-50 border border-gray-100">Matlab / Simulink</div>
          <div class="px-4 py-3 rounded-lg bg-gray-50 border border-gray-100">Qualité & conformité</div>
          <div class="px-4 py-3 rounded-lg bg-gray-50 border border-gray-100">Analyse de risques</div>
          <div class="px-4 py-3 rounded-lg bg-gray-50 border border-gray-100">Gestion de projet</div>
          <div class="px-4 py-3 rounded-lg bg-gray-50 border border-gray-100">IoT & IA</div>
          <div class="px-4 py-3 rounded-lg bg-gray-50 border border-gray-100">Développement logiciel</div>
        </div>
      </div>
    </div>
  </section>
  <StatsSection />
  <ServicesPreview />
  <Testimonials />
  <CTASection />
</Layout>
