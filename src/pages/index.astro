---
import Layout from '../layouts/Layout.astro';
import { getLangFromUrl, useTranslations } from '../i18n/utils';
import HeroSection from '../components/HeroSection.astro';
import TrustBadges from '../components/TrustBadges.astro';
import ValueProps from '../components/ValueProps.astro';
import ServicesPreview from '../components/ServicesPreview.astro';
import StatsSection from '../components/StatsSection.astro';
import Testimonials from '../components/Testimonials.astro';
import CTASection from '../components/CTASection.astro';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout 
  title={t('nav.home')}
  description="Consultant en systèmes embarqués et conception électronique pour dispositifs médicaux, comptage intelligent et équipements hors-route. IEC 60601/62304, IEC 61508, ISO 13849, DLMS/COSEM. Lévis, Québec, Canada."
  keywords="consultant systèmes embarqués, conception électronique, design PCB, dispositifs médicaux IEC 60601 IEC 62304, comptage intelligent DLMS COSEM, sécurité fonctionnelle IEC 61508 ISO 13849, EMI EMC, HIL SIL, automatisation industrielle, Lévis Québec"
>
  <HeroSection />
  <TrustBadges />
  <ValueProps />
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-5xl mx-auto">
        <h2 class="text-2xl md:text-3xl font-bold text-gray-900 mb-4">
          Systèmes embarqués, conception électronique et conformité
        </h2>
        <p class="text-gray-600 mb-6">
          Nous livrons des électroniques embarquées et du firmware fiables pour le médical, le comptage intelligent
          et les équipements hors-route. Nous travaillons selon IEC 60601/62304, IEC 61508, ISO 13849, ISO 26262
          et DLMS/COSEM.
        </p>
        <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-3 text-sm text-gray-700">
          <div class="px-4 py-3 rounded-lg bg-gray-50 border border-gray-100">Systèmes embarqués</div>
          <div class="px-4 py-3 rounded-lg bg-gray-50 border border-gray-100">Conception électronique</div>
          <div class="px-4 py-3 rounded-lg bg-gray-50 border border-gray-100">IEC 60601 / 62304</div>
          <div class="px-4 py-3 rounded-lg bg-gray-50 border border-gray-100">IEC 61508</div>
          <div class="px-4 py-3 rounded-lg bg-gray-50 border border-gray-100">ISO 13849</div>
          <div class="px-4 py-3 rounded-lg bg-gray-50 border border-gray-100">ISO 26262</div>
          <div class="px-4 py-3 rounded-lg bg-gray-50 border border-gray-100">DLMS/COSEM</div>
          <div class="px-4 py-3 rounded-lg bg-gray-50 border border-gray-100">EMI / EMC</div>
          <div class="px-4 py-3 rounded-lg bg-gray-50 border border-gray-100">HIL / SIL</div>
          <div class="px-4 py-3 rounded-lg bg-gray-50 border border-gray-100">Automatisation & vision</div>
          <div class="px-4 py-3 rounded-lg bg-gray-50 border border-gray-100">Automobile</div>
        </div>
      </div>
    </div>
  </section>
  <StatsSection />
  <ServicesPreview />
  <Testimonials />
  <CTASection />
</Layout>
